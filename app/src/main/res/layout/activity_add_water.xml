<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    tools:context=".AddWaterActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appbar_layout"
        >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue"
            android:layout_alignParentBottom="true"
            app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior"
            >
            <LinearLayout
                android:id="@+id/btn_backaddWater"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/backarrow"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADD WATER"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusableInTouchMode="true"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal"
        android:fillViewport="true">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="10sp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  android:orientation="horizontal"

    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10sp"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Water"
        android:textColor="@color/black"
        android:textStyle="bold"


        />
        <TextView
            android:id="@+id/totalwater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="15sp"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:layout_gravity="center"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10sp"
        >
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remaining Water"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/remainingwater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="15sp"

            android:textColor="@color/blue"
            android:textStyle="bold"
            android:layout_gravity="center"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10sp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Water Intake"
            android:textColor="@color/black"
            android:textStyle="bold"


            />
        <TextView
            android:id="@+id/totalwaterintake"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="15sp"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:layout_gravity="center"

            />
    </LinearLayout>


</LinearLayout>
        </androidx.cardview.widget.CardView>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="10sp"

            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            app:cardCornerRadius="10dp"
            app:cardElevation="15dp"

            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1"
                >
            <LinearLayout
                android:id="@+id/layout_breakfast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/addwater"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ADD WATER"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Todays Date "
                        android:textColor="@color/black"
                        android:textSize="15dp"

                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"/>
                    <TextView
                        android:id="@+id/selectdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Select Date"
                        android:textSize="15dp"
                        style="bold"
                        android:layout_marginLeft="40dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"

                    android:layout_marginRight="20dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Todays Time "
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:layout_marginLeft="20dp"/>
                    <TextView
                        android:id="@+id/selecttime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Select Time"
                        android:textSize="15dp"
                        style="bold"
                        android:layout_marginLeft="40dp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Water In ML"
                    android:layout_marginTop="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_marginLeft="20dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="40sp"
                        android:layout_marginRight="40sp"
                        android:layout_marginBottom="20sp"


                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            >



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:orientation="horizontal">
                                <LinearLayout

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20sp"
                                    android:layout_marginRight="20sp"
                                    android:layout_marginBottom="20sp"
                                    android:orientation="horizontal"
                                    android:background="@drawable/bloak"
                                    android:weightSum="1"
                                    >
                                    <EditText
                                        android:id="@+id/waterWaveView"
                                        android:layout_weight="0.6"
                                        android:layout_width="wrap_content"
                                        android:layout_height="55dp"
                                        android:background="@null"
                                        android:inputType="number"
                                        android:textStyle="bold"
                                        android:textColor="@color/black"
                                        android:layout_marginLeft="20sp"

                                        android:textAlignment="center"

                                        android:layout_gravity="center"
                                        android:hint="0"
                                        android:paddingLeft="5dp"
                                        android:textSize="20sp" />
                                    <FrameLayout
                                        android:id="@+id/content_frame"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="13dp"
                                        >

                                        <TextView
                                            android:layout_weight="0.4"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textStyle="bold"

                                            android:textColor="@color/blue"
                                            android:textSize="20sp"
                                            android:text="ML"
                                            />
                                    </FrameLayout>
                                </LinearLayout>





                            </LinearLayout>


                        </LinearLayout>



                    </LinearLayout>

                <Button
                    android:id="@+id/addwater_btn"

                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_marginBottom="10sp"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    app:backgroundTint="@null"
                    android:textColor="@color/white"
                    android:background="@drawable/mybutton"
                    android:text="ADD" />

            </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="horizontal"
            android:fillViewport="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:stretchColumns="3"
            android:shrinkColumns="0.1"
            android:paddingRight="5dp">


        <TableRow
            android:background="#51B435"
            android:padding="10dp">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"

              android:gravity="center"
                android:textStyle="bold"
                android:text="Today Date"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="center"

                android:text="Todays Time"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="center"

                android:text="Water In Ml"
                />


        </TableRow>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/breakfastrecylesview"
                android:layout_marginBottom="10sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </androidx.recyclerview.widget.RecyclerView>
        </TableLayout>
        </HorizontalScrollView>
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>

    </LinearLayout>



